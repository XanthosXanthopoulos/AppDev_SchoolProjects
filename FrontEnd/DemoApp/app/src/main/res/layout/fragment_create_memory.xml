<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.main.plan.memory.create.CreateMemoryFragment">

    <LinearLayout
        android:id="@+id/pop_up_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/white_panel"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="parent">

        <TextView
            android:id="@+id/Create_Activity_Title"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="#1976D2"
            android:gravity="center"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:text="Create a new memory"
            android:textColor="#ffffff"
            android:textSize="20sp"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/activity_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:background="@drawable/round_border"
            android:hint="Title"
            android:padding="6dp"
            app:layout_constraintTop_toBottomOf="@id/Create_Activity_Title" />

        <LinearLayout
            android:id="@+id/Activity_Address_Layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/white_panel"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/Create_Activity_Title">

            <EditText
                android:id="@+id/activity_address"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="16dp"
                android:layout_marginEnd="100dp"
                android:background="@drawable/round_border"
                android:hint="Address"
                android:padding="6dp"
                app:layout_constraintEnd_toStartOf="@id/locate_button"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/activity_title"
                tools:ignore="Suspicious0dp" />

            <ImageButton
                android:id="@+id/locate_button"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/location_pin"
                app:layout_constraintBottom_toBottomOf="@id/activity_address"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/activity_address"
                app:layout_constraintTop_toTopOf="@id/activity_address" />

        </LinearLayout>

        <EditText
            android:id="@+id/activity_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:background="@drawable/round_border"
            android:gravity="top"
            android:hint="Description"
            android:minLines="3"
            android:padding="6dp"
            app:layout_constraintTop_toBottomOf="@id/activity_address" />

        <EditText
            android:id="@+id/activity_tags"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:background="@drawable/round_border"
            android:gravity="top"
            android:hint="Tags"
            android:minLines="2"
            android:padding="6dp"
            app:layout_constraintTop_toBottomOf="@id/activity_description" />

        <Spinner
            android:id="@+id/activity_type"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_margin="16dp"
            android:padding="6dp"
            app:layout_constraintTop_toBottomOf="@id/activity_tags" />

        <Button
            android:id="@+id/add_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:layout_marginBottom="16dp"

            android:text="add memory"
            android:layout_gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/activity_type" />

    </LinearLayout>

    <TextView
        android:id="@+id/cross_btn"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:gravity="center"
        android:padding="10dp"
        android:text="X"
        android:textColor="@color/white"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.cardview.widget.CardView>